<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucaoliveira.caronauniversitaria">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RESTServiceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/firebase_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.HomeScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.StudentsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FinishRegisterActivity"
            android:label="@string/info_label"
            android:noHistory="true" />
        <activity
            android:name=".ui.StartRegisterActivity"
            android:label="@string/info_label" />
        <activity
            android:name=".ui.StudentInformationActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/action_sign_in_label" />
    </application>

</manifest>